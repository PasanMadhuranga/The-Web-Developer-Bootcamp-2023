<%- include('../partials/head') %>
<title><%= category %></title>
<%- include('../partials/navbar') %>
    
    <h1 class="d-flex justify-content-center my-4"><%= title %></h1>

    <ul class="d-grid gap-3 member-list">
        <% for (let member of members) { %>
            <li><a href="/hrm/<%= category %>/<%= member.id %>" class="member-name"><%= member.name %></a></li>
        <% } %>
    </ul>

    <div class="col-6 mx-auto text-center last-item"> 
        <a href="/hrm/<%= category %>/new" class="btn btn-block btn-primary btn-lg mb-2 custom-btn">Add member</a>
    </div> 
<%- include('../partials/footer') %>