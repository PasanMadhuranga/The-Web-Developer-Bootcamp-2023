<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
</head>
<body>
    <h1>Update Cloth</h1>
    <form method="post" action="/clothes/<%= cloth._id %>?_method=PUT">
        <label for="name">Name: </label>
        <input type="text" id="name" name="name" placeholder="Enter name" value=<%= cloth.name %> required>
        
        <label for="price">Price: </label>
        <input type="number" step="0.01" id="price" name="price" placeholder="Enter price" value=<%= cloth.price %> required>
        
        <p>Category: </p>
        <% for (let cat of categoriesArr) { %>
            <input type="radio" id=<%= cat %> name="category" value=<%= cat %> <%= cat === cloth.category ? 'checked' : '' %> required>
            <label for="<%= cat %>"><%= cat %></label><br>
        <% } %>

        <fieldset>
            <legend>Available Sizes</legend>
            <ul>
                <% for (let size of sizesArr) { %>
                    <li>
                        <label for=<%= size %> ><%= size %></label>
                        <input type="checkbox" id="<%= size %>" name="sizes" value=<%= size %> <%= cloth.sizes.includes(size) ? 'checked' : '' %> />
                    </li>
                <% } %>
            </ul>
        </fieldset>

        <label for="qty">Quantity: </label>
        <input type="number" id="qty" name="qty" placeholder="Enter quantity" value=<%= cloth.qty %> required>

        <label for="image">Image: </label>
        <input type="text" id="image" name="image" placeholder="Enter image URL" value=<%= cloth.image %> required>
        <br><button>Add</button>
    </form>
</body>
</html>